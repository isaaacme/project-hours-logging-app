---
import { appConfig } from '../config/app.config';

export interface Props {
  submissionData: {
    id: string;
    projectName: string;
    date: string;
    hours: number;
    submittedAt: string;
  };
  onNewSubmission?: () => void;
  onClose?: () => void;
}

const { submissionData, onNewSubmission, onClose } = Astro.props;

// Format date for display
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('he-IL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// Format time for display
const formatTime = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleTimeString('he-IL', {
    hour: '2-digit',
    minute: '2-digit'
  });
};

const formattedDate = formatDate(submissionData.date);
const formattedSubmittedAt = formatTime(submissionData.submittedAt);
---

<div id="thank-you-view" class="thank-you-container">
  <div class="thank-you-content">
    <!-- Success Icon -->
    <div class="success-icon">
      <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="12" cy="12" r="10" stroke="#16a34a" stroke-width="2"/>
        <path d="M8 12l2 2 4-4" stroke="#16a34a" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>

    <!-- Thank You Message -->
    <div class="thank-you-header">
      <h1>{appConfig.labels.thankYou}</h1>
      <p>{appConfig.labels.submissionReceived}</p>
    </div>

    <!-- Submission Details -->
    <div class="submission-details">
      <h2>{appConfig.labels.submissionDetails}</h2>
      
      <div class="details-grid">
        <div class="detail-item">
          <span class="detail-label">{appConfig.labels.submissionId}</span>
          <span class="detail-value">#{submissionData.id}</span>
        </div>
        
        <div class="detail-item">
          <span class="detail-label">{appConfig.labels.projectName}</span>
          <span class="detail-value">{submissionData.projectName}</span>
        </div>
        
        <div class="detail-item">
          <span class="detail-label">{appConfig.labels.workDate}</span>
          <span class="detail-value">{formattedDate}</span>
        </div>
        
        <div class="detail-item">
          <span class="detail-label">{appConfig.labels.totalHours}</span>
          <span class="detail-value">{submissionData.hours} שעות</span>
        </div>
        
        <div class="detail-item">
          <span class="detail-label">{appConfig.labels.submittedAt}</span>
          <span class="detail-value">{formattedSubmittedAt}</span>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
      <button 
        class="btn btn-secondary" 
        onclick="window.print()"
        aria-label="הדפס קבלה"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M6 9V2h12v7M6 18H4a2 2 0 01-2-2v-5a2 2 0 012-2h16a2 2 0 012 2v5a2 2 0 01-2 2h-2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M6 14h12v8H6v-8z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        {appConfig.labels.printReceipt}
      </button>
      
      <button 
        class="btn btn-primary" 
        onclick="handleNewSubmission()"
        aria-label="דיווח חדש"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 5v14M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        {appConfig.labels.newSubmission}
      </button>
    </div>

    <!-- Close Button (Mobile) -->
    <button 
      class="close-btn" 
      onclick="handleClose()"
      aria-label="סגור"
    >
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>
</div>

<script>
  function handleNewSubmission() {
    // Emit event to parent component
    const event = new CustomEvent('newSubmission');
    document.dispatchEvent(event);
  }

  function handleClose() {
    // Emit event to parent component
    const event = new CustomEvent('closeThankYou');
    document.dispatchEvent(event);
  }

  // Add keyboard support
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      handleClose();
    }
  });
</script>

<style>
  .thank-you-container {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    z-index: 1000;
    animation: fadeIn 0.3s ease-out;
  }

  .thank-you-content {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    max-width: 500px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    text-align: center;
    animation: slideUp 0.3s ease-out;
    font-family: "Open Sans Hebrew", "Arial Hebrew", sans-serif;
  }

  .success-icon {
    margin-bottom: 1.5rem;
    animation: scaleIn 0.5s ease-out 0.2s both;
  }

  .thank-you-header h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #16a34a;
    margin-bottom: 0.5rem;
    font-family: "Open Sans Hebrew", "Arial Hebrew", sans-serif;
  }

  .thank-you-header p {
    font-size: 1.125rem;
    color: #6b7280;
    margin-bottom: 2rem;
    font-family: "Open Sans Hebrew", "Arial Hebrew", sans-serif;
  }

  .submission-details {
    text-align: right;
    margin-bottom: 2rem;
    animation: fadeIn 0.5s ease-out 0.4s both;
  }

  .submission-details h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #374151;
    margin-bottom: 1rem;
    font-family: "Open Sans Hebrew", "Arial Hebrew", sans-serif;
  }

  .details-grid {
    display: grid;
    gap: 1rem;
  }

  .detail-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background-color: #f9fafb;
    border-radius: 0.5rem;
    border: 1px solid #e5e7eb;
  }

  .detail-label {
    font-size: 0.875rem;
    color: #6b7280;
    font-weight: 500;
    font-family: "Open Sans Hebrew", "Arial Hebrew", sans-serif;
  }

  .detail-value {
    font-size: 0.875rem;
    color: #111827;
    font-weight: 600;
    font-family: "Open Sans Hebrew", "Arial Hebrew", sans-serif;
  }

  .action-buttons {
    display: flex;
    gap: 1rem;
    flex-direction: column;
    animation: fadeIn 0.5s ease-out 0.6s both;
  }

  .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
    font-family: "Open Sans Hebrew", "Arial Hebrew", sans-serif;
    min-height: 44px;
  }

  .btn-primary {
    background-color: #1e40af;
    color: white;
  }

  .btn-primary:hover {
    background-color: #1e3a8a;
    transform: translateY(-1px);
  }

  .btn-secondary {
    background-color: #f3f4f6;
    color: #374151;
    border: 1px solid #d1d5db;
  }

  .btn-secondary:hover {
    background-color: #e5e7eb;
    transform: translateY(-1px);
  }

  .close-btn {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: none;
    border: none;
    color: #6b7280;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .close-btn:hover {
    background-color: #f3f4f6;
    color: #374151;
  }

  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      transform: translateY(20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes scaleIn {
    from {
      transform: scale(0.8);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  /* Mobile-first responsive design */
  @media (min-width: 768px) {
    .thank-you-content {
      padding: 2.5rem;
      max-width: 600px;
    }

    .thank-you-header h1 {
      font-size: 2.5rem;
    }

    .action-buttons {
      flex-direction: row;
      justify-content: center;
    }

    .btn {
      flex: 1;
      max-width: 200px;
    }

    .close-btn {
      display: none; /* Hide close button on desktop, use ESC key */
    }
  }

  /* Print styles */
  @media print {
    .thank-you-container {
      position: static;
      background: white;
      padding: 0;
    }

    .thank-you-content {
      box-shadow: none;
      border: 1px solid #e5e7eb;
      max-width: 100%;
    }

    .action-buttons,
    .close-btn {
      display: none;
    }

    .submission-details {
      break-inside: avoid;
    }
  }

  /* RTL support */
  @supports (direction: rtl) {
    .thank-you-container {
      direction: rtl;
    }

    .submission-details {
      text-align: right;
    }

    .detail-item {
      flex-direction: row-reverse;
    }

    .close-btn {
      right: 1rem;
      left: auto;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .thank-you-content {
      background: #1f2937;
      color: #f9fafb;
    }

    .thank-you-header p {
      color: #d1d5db;
    }

    .submission-details h2 {
      color: #f9fafb;
    }

    .detail-item {
      background-color: #374151;
      border-color: #4b5563;
    }

    .detail-label {
      color: #9ca3af;
    }

    .detail-value {
      color: #f9fafb;
    }

    .btn-secondary {
      background-color: #374151;
      color: #f9fafb;
      border-color: #4b5563;
    }

    .btn-secondary:hover {
      background-color: #4b5563;
    }

    .close-btn {
      color: #9ca3af;
    }

    .close-btn:hover {
      background-color: #374151;
      color: #f9fafb;
    }
  }
</style>
