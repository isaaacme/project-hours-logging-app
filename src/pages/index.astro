---
import Layout from '../layouts/Layout.astro';
---

<Layout title="יומן שעות פרויקטים" description="דיווב יומי של שעות עבודה לפי פרויקט">
  <meta http-equiv="refresh" content="0; url=/form" />
  
  <div style="display: flex; align-items: center; justify-content: center; min-height: 100vh; font-family: 'Open Sans Hebrew', 'Arial Hebrew', sans-serif; direction: rtl; text-align: center;">
    <div>
      <h1 style="color: #f9fafb; margin-bottom: 16px;">יומן שעות פרויקטים</h1>
      <p style="color: #d1d5db;">מעביר לדף הטופס...</p>
    </div>
  </div>

  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: #1a202c;
    }
    
    @media (prefers-color-scheme: light) {
      body {
        background-color: #fafbfc;
      }
    }
    
    h1 {
      color: #f9fafb !important;
    }
    
    @media (prefers-color-scheme: light) {
      h1 {
        color: #1a202c !important;
      }
    }
    
    p {
      color: #d1d5db !important;
    }
    
    @media (prefers-color-scheme: light) {
      p {
        color: #6b7280 !important;
      }
    }
  </style>
</Layout>
